<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.First">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/image_slider"
        android:layout_width="match_parent"
        android:layout_height="396dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_slider"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="12dp"
        android:text="Welcome to XBone"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:lineSpacingExtra="4dp" />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_text"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="17dp"
        android:text="XBone AI is designed to help you monitor and improve bone health using AI-powered solutions."
        android:textColor="#808080"
        android:fontFamily="sans-serif-medium"
        android:textSize="18sp"
        android:textStyle="italic"
        android:lineSpacingExtra="4dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/additional_description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_text"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:text="Track your progress, get personalized advice, and optimize your bone health with our innovative tools."
        android:textColor="#808080"
        android:fontFamily="sans-serif-medium"
        android:textSize="16sp"
        android:textStyle="italic"
        android:lineSpacingExtra="4dp"
        android:gravity="center" />

    <Button
        android:id="@+id/lets_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Let's Start"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_blue" />

</android.widget.RelativeLayout>
